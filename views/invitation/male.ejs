<!-- Confetti JavaScript -->
<script>
    // Confetti animation script
    (function() {
        var confettiContainer = document.querySelector('.confetti');
        var colors = ['#ff0a54', '#ff477e', '#ff7096', '#ff85a1', '#fbb1bd', '#f9bec7', '#f7cad0', '#fae0e4'];
        var confettiCount = 200;
        var gravity = 0.5;
        var terminalVelocity = 5;
        var drag = 0.075;
        var confetti = [];

        function randomRange(min, max) {
            return Math.random() * (max - min) + min;
        }

        function initConfetti() {
            for (var i = 0; i < confettiCount; i++) {
                var confettiPiece = document.createElement('div');
                confettiPiece.classList.add('confetti-piece');
                confettiPiece.style.backgroundColor = colors[Math.floor(randomRange(0, colors.length))];
                confettiPiece.style.left = randomRange(0, window.innerWidth) + 'px';
                confettiPiece.style.top = randomRange(-window.innerHeight, 0) + 'px';
                confettiPiece.style.opacity = randomRange(0.5, 1);
                confettiPiece.style.transform = 'rotate(' + randomRange(0, 360) + 'deg)';
                confettiPiece.velocityX = randomRange(-1, 1);
                confettiPiece.velocityY = randomRange(1, terminalVelocity);
                confettiContainer.appendChild(confettiPiece);
                confetti.push(confettiPiece);
            }
        }

        function updateConfetti() {
            confetti.forEach(function(confettiPiece) {
                confettiPiece.velocityY += gravity;
                confettiPiece.velocityX *= (1 - drag);
                confettiPiece.velocityY *= (1 - drag);
                confettiPiece.style.left = (parseFloat(confettiPiece.style.left) + confettiPiece.velocityX) + 'px';
                confettiPiece.style.top = (parseFloat(confettiPiece.style.top) + confettiPiece.velocityY) + 'px';

                if (parseFloat(confettiPiece.style.top) > window.innerHeight) {
                    confettiPiece.style.top = randomRange(-window.innerHeight, 0) + 'px';
                    confettiPiece.velocityY = randomRange(1, terminalVelocity);
                }
            });

            requestAnimationFrame(updateConfetti);
        }

        initConfetti();
        updateConfetti();
    })();
</script>

